[Unit]
Description=Buy2Cash FastAPI Backend
After=network.target

[Service]
Type=simple
User=www-data
WorkingDirectory=/opt/buy2cash/backend
Environment="PATH=/opt/buy2cash/backend/venv/bin"
ExecStart=/opt/buy2cash/backend/venv/bin/uvicorn main:app --host 0.0.0.0 --port 8000 --workers 4
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target

